#!/usr/bin/env python3

import argparse
import sys
from pathlib import Path
from typing import Any


def _info(msg: str) -> None:
    print(msg, file=sys.stderr)


def _remove_leading_updirs(file: Path) -> tuple[Path, int]:
    parts = file.parts
    leading_updirs = 0
    while parts and parts[0] == '..':
        parts = parts[1:]
        leading_updirs += 1
    return Path(*parts), leading_updirs


def _morley(file: Path, *, dry_run: bool) -> None:
    if not file.is_symlink():
        return
    target = file.readlink()
    relative_part, updirs = _remove_leading_updirs(target)
    base = file.parent.resolve()
    while updirs > 0:
        base = base.parent
        updirs -= 1
    new_target = base.joinpath(relative_part)
    if target != new_target:
        assert file.resolve() == new_target.resolve()
        _info(
            f"Converting {file} from relative symlink ({target}) to absolute ({new_target})"
        )
        if not dry_run:
            file.unlink()
            file.symlink_to(new_target)


def _parse_args() -> Any:
    parser = argparse.ArgumentParser(
        description=(
            "If FILE is a relative symbolic link, it will be replaced with an absolute symbolic"
            " link to the same target. Symbolic links are NOT recursively evaluated."
        ),
    )
    parser.add_argument('file', nargs='+')
    parser.add_argument('--dry-run', action='store_true', default=False)
    return parser.parse_args()


def main() -> None:
    args = _parse_args()
    dry_run = args.dry_run
    for file in args.file:
        _morley(Path(file), dry_run=dry_run)


if __name__ == '__main__':
    main()
