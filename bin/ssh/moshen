#!/bin/bash
set -euo pipefail

if [ "$#" -lt 1 ] || [ "$#" -gt 2 ]; then
    printf 'Usage: %s HOST [SESSION_NAME]
' "$0" >&2
    exit 1
fi

host="$1"
session_name="${2:-main}"

state_dir="${XDG_STATE_HOME:-}"
if [ -z "$state_dir" ]; then
    state_dir="$HOME/.local/state"
fi
sessions_file="$state_dir/moshen/sessions"
session_line="$(printf '%s' "$host" | base64):$(printf '%s' "$session_name" | base64)"

if command -v sponge >/dev/null; then
    (
        cat "$sessions_file"
        echo "$session_line"
    ) | sort -u | sponge "$sessions_file"
fi
mosh "$host" -- sh -c 'command -v tmux >/dev/null 2>&1 || exec bash; command -v wlr-fix-tmux-resurrect >/dev/null 2>&1 && wlr-fix-tmux-resurrect; tmux new -As '"${session_name@Q}"
if command -v sponge >/dev/null; then
    grep -v "^$session_line$" "$sessions_file" | sponge "$sessions_file"
fi
