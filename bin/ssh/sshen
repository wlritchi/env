#!/bin/bash
set -euo pipefail

if [ "$#" -lt 1 ] || [ "$#" -gt 2 ]; then
    printf 'Usage: %s HOST [SESSION_NAME]
' "$0" >&2
    exit 1
fi

host="$1"
session_name="${2:-main}"

ssh -t "$host" -- sh -c 'command -v tmux >/dev/null 2>&1 || exec bash; command -v wlr-fix-tmux-resurrect >/dev/null 2>&1 && wlr-fix-tmux-resurrect; tmux new -As '"${session_name@Q}"
