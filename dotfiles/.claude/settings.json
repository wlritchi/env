{
  "cleanupPeriodDays": 99999,
  "env": {
    "BASH_DEFAULT_TIMEOUT_MS": "3600000",
    "ANTHROPIC_MODEL": "opus",
    "CLAUDE_CODE_SUBAGENT_MODEL": "claude-opus-4-5",
    "CLAUDE_CODE_ENABLE_TELEMETRY": "1",
    "OTEL_METRICS_EXPORTER": "otlp",
    "OTEL_LOGS_EXPORTER": "otlp",
    "OTEL_EXPORTER_OTLP_ENDPOINT": "https://otel.wlritchi.com",
    "OTEL_EXPORTER_OTLP_PROTOCOL": "http/protobuf"
  },
  "permissions": {
    "allow": [
      "Skill(a2a:*)",
      "Skill(opinionated-setup:*)",
      "Skill(ralph-loop:ralph-loop)",
      "Skill(skill-feedback:*)",
      "Skill(superpowers:*)",
      "mcp__plugin_context7_context7__resolve-library-id",
      "mcp__plugin_context7_context7__query-docs",
      "Read(~/a2a/**)",
      "Write(~/a2a/**)",
      "Edit(~/a2a/**)",
      "Bash(mkdir -p ~/a2a:*)",
      "Bash(touch ~/a2a:*)",
      "Bash(cat > ~/a2a:*)",
      "Bash(cat ~/a2a:*)",
      "Bash(ls ~/a2a:*)",
      "Bash(ls -la ~/a2a/**:*)"
    ],
    "additionalDirectories": [
      "~/a2a"
    ]
  },
  "enabledPlugins": {
    "a2a@wlr-cc-plugins": true,
    "agent-sdk-dev@claude-plugins-official": true,
    "code-review@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": true,
    "context7@claude-plugins-official": true,
    "feature-dev@claude-plugins-official": true,
    "forgejo@wlr-cc-plugins": true,
    "frontend-design@claude-plugins-official": true,
    "github@claude-plugins-official": false,
    "gopls-lsp@claude-plugins-official": true,
    "lua-lsp@claude-plugins-official": false,
    "opinionated-setup@wlr-cc-plugins": true,
    "playwright@claude-plugins-official": true,
    "plugin-dev@claude-plugins-official": true,
    "pr-review-toolkit@claude-plugins-official": true,
    "pyright-lsp@claude-plugins-official": true,
    "ralph-loop@claude-plugins-official": true,
    "rust-analyzer-lsp@claude-plugins-official": true,
    "security-guidance@claude-plugins-official": true,
    "skill-feedback@wlr-cc-plugins": true,
    "slack@claude-plugins-official": false,
    "superpowers-developing-for-claude-code@superpowers-marketplace": true,
    "superpowers@superpowers-marketplace": true,
    "swift-lsp@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true
}
